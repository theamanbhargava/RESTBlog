<% include ./partials/header %>
<div class="container">
    <div class="row">
        <h1 style="text-align: center">Sign Up</h1>
        <div style="width: 30%; margin: 25px auto;">
            <form class="ui form" action="/admin-register" method="post">
                <div class="field">
                    <input class="form-control" required type="text" name="username" placeholder="Username">
                </div>
                <div class="field">
                    <input class="form-control" required type="email" name="email" placeholder="Email">
                </div>
                <div class="field">
                    <input class="form-control" required type="password" name="password" placeholder="Password">
                </div>
                <div class="field">
                    <input class="form-control" required type="password" name="secret" placeholder="Enter Admin Secret">
                </div>
                <div class="field">
                    <button class="btn btn-lg btn-primary btn-block">Sign Up!</button>
                </div>
            </form>
            <a href="/blogs">Go Back</a>
        </div>
    </div>
</div>
<% include ./partials/footer %>

