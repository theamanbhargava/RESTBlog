<% include ../partials/header %>
<div class="ui main text container segment">
    <h1 style="text-align: center">Edit Comment</h1>
    <div class="ui huged header" style="width: 30%; margin: 25px auto;">
        <form class="ui form" action="/blogs/<%= blog_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">
            <div class="field">
                <textarea class="field" type="text"  name="comment[text]"
                          placeholder="text"><%= comment.text %></textarea>
            </div>
            <div class="field">
                <button class="ui big green inverted button">Submit!</button>
            </div>
        </form>
        <a href="/blogs/<%=blog_id%>">Go Back</a>
    </div>
</div>
<% include ../partials/footer %>
